<Window x:Class="LocalNetworkChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Local Network Chat" Height="350" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Локальный чат" FontSize="24" Margin="0 0 0 20"/>
            <TextBox Name="UserNameTextBox" Text="Введите ваше имя" Margin="0 0 0 10"/>
            <RadioButton Name="CreateChatRadioButton" Content="Создать новый чат"/>
            <RadioButton Name="ConnectChatRadioButton" Content="Подключиться к существующему чату"/>
            <Button Content="Продолжить" Click="ContinueButton_Click" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</Window>